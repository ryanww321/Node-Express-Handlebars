<div class="text-center"><img class="text-center" src="/public/assets/img/burger-pic.png"></div>
<br>
<h1 class="text-center">Eat-Da-Burger!</h1>

<div class="text-center">
<form class="create-form">
  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <button type="submit">Submit</button>
  </div>
</form>
</div>

<div class="text-center">
<div class="burger-list">

  <h2>Burgers needing to be eaten!</h2>
  <ul>
    {{#each burger}}
    {{#unless devoured}}
    <li>
      <p class="burger-list-element">{{id}}. {{burger_name}} <button class="devour-button"
          data-id={{id}}>Devour</button></p>
    </li>
    {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="burger-list">

  <h2>Eaten Burgers</h2>
  <ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
      <p class="burger-list-element">{{id}}. {{burger_name}} <button class="delete-button"
          data-id={{id}}>Delete</button></p>
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
<div class="text-center"><img class="text-center" src="/../public/assets/img/burger-pic.png"></div>
<br>

<main>
  <section class="title">
    <h1>Burgers</h1>


    <form class="create-form">
      <div class="form-group">
        <label for="ba">Burger Name:</label>
        <input type="text" id="ba" name="name">
        <button type="submit">Submit</button>
      </div>
    </form>

  </section>
  <div class="burgerLists">

    <h2>Burgers to Devoured!</h2>
    <ul>
      {{#each burger}}
      {{#unless devoured}}
      <li>
        <p class="burgerItem">{{id}}. {{burger_name}} <button class="devour-button" data-id={{id}}>Devour</button></p>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="burgerLists">

    <h2>Devoured Burgers</h2>
    <ul>
      {{#each burger}}
      {{#if devoured}}
      <li>
        <p class="burgerItem">{{id}}. {{burger_name}}</p>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</main>